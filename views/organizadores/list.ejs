<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= title %></h1>
    <button id="createOrganizadorBtn" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Crear Organizador
    </button>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% if (organizadores.length > 0) { %>
        <% organizadores.forEach(function(organizador) { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-person-workspace me-2"></i><%= organizador.nombre %></h5>
                        <p class="card-text text-secondary"><i class="bi bi-telephone-fill me-2"></i><%= organizador.telefono || 'No especificado' %></p>
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <button class="btn btn-sm btn-outline-warning edit-organizador-btn" 
                                data-id="<%= organizador.id_organizador %>"
                                data-nombre="<%= organizador.nombre %>"
                                data-telefono="<%= organizador.telefono || '' %>">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </button>
                        <form action="/organizadores/eliminar/<%= organizador.id_organizador %>" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro? Esta acción también eliminará los eventos asociados.');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12 text-center py-5">
            <p>No hay organizadores registrados. ¡Crea el primero!</p>
        </div>
    <% } %>
</div>

<!-- Modal para Crear/Editar Organizador -->
<div class="modal fade" id="organizadorModal" tabindex="-1" aria-labelledby="organizadorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="organizadorModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="organizadorForm" method="POST">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del Organizador</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono (Opcional)</label>
                        <input type="tel" class="form-control" id="telefono" name="telefono">
                    </div>
                    <div class="modal-footer mt-4">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

