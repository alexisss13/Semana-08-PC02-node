<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <a href="/organizadores/crear" class="btn btn-primary">Crear Organizador</a>
</div>

<%- include('../partials/messages', { success: success }) %>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (organizadores.length > 0) { %>
                        <% organizadores.forEach(function(organizador) { %>
                            <tr>
                                <td><%= organizador.nombre %></td>
                                <td><%= organizador.telefono || 'N/A' %></td>
                                <td class="text-end">
                                    <a href="/organizadores/editar/<%= organizador.id_organizador %>" class="btn btn-sm btn-warning">Editar</a>
                                    <form action="/organizadores/eliminar/<%= organizador.id_organizador %>" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este organizador?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center">No hay organizadores registrados.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>