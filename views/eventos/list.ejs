<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= title %></h1>
    <a href="/eventos/crear" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Crear Evento
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% if (eventos.length > 0) { %>
        <% eventos.forEach(function(evento) { %>
            <div class="col">
                <div class="card h-100">
                    <a href="/eventos/<%= evento.id_evento %>">
                        <% if (evento.afiche) { %>
                            <img src="/uploads/afiches/<%= evento.afiche %>" class="card-img-top" alt="Afiche" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="d-flex align-items-center justify-content-center bg-dark text-secondary" style="height: 200px;">
                                <i class="bi bi-image-alt fs-1"></i>
                            </div>
                        <% } %>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= evento.titulo %></h5>
                        <p class="card-text text-secondary mb-1">
                            <i class="bi bi-calendar-event me-2"></i>
                            <%= new Date(evento.fecha + 'T00:00:00').toLocaleDateString() %>
                        </p>
                        <p class="card-text text-secondary">
                            <i class="bi bi-person-workspace me-2"></i>
                            <%= evento.organizador.nombre %>
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <a href="/eventos/editar/<%= evento.id_evento %>" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"></i> Editar</a>
                        <form action="/eventos/eliminar/<%= evento.id_evento %>" method="POST" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este evento?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i> Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12 text-center py-5">
            <p>No hay eventos registrados. ¡Crea el primero!</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>

